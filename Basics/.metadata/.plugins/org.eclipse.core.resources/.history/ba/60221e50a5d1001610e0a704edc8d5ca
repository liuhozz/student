package com.heima.Test;

import java.io.File;
import java.io.IOException;

public class Test01 {

	/**
	 * 在指定盘符(根目录)下面的“hello\\world\\Java”这个目录中创建文件a.txt。
	 * @throws IOException 
	 */
	public static void main(String[] args) throws IOException {
		// TODO Auto-generated method stub
		File file=new File("d:\\hello\\world\\Java");
		file.mkdirs();
		
		File file1=new File("d:\\hello\\world\\Java\\a.txt");
		file1.createNewFile();
	}

}
